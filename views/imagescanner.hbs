<main>
  <div class="home">


    <div class="headline-one">
      <h1>Scan Your Image to PDF</h1>
      <p>Scan and Convert Your Images to PDF for Free</p>

    </div>


  <form id="form" >
<div class="upload-container">
      <div class="drop-zone">
        <div class="drop-zone__content">
          <span class="drop-zone__icon">
            <i class="fas fa-cloud-upload-alt"></i>
          </span>
          <span class="drop-zone__prompt">Drop files here or <span class="drop-zone__browse">browse</span></span>
          <input type="file" name="images" id="fileUpload" class="drop-zone__input">
        </div>
      </div>

      <div class="preview-container">
        <div class="preview-list"></div>
        <button class="upload-btn" disabled>Upload</button>
      </div>
    </div>
  </form>

    <div class="loading-bar"></div>

  </div>

  <div class="overlay" id="loading">
    <div class="overlay__inner">
      <div class="overlay__content"><span class="spinner"></span></div>
    </div>
  </div>

</main>







