                    </footer>
                </div>
            </div>
        </article>

        {{/each}}

    </div>
</main>
</section>
<br>

{{>footer}}


<script>
    const blog  = document.querySelectorAll('.blog')

    blog.forEach((blog) => {
        blog.addEventListener('click', () => {
            const id = blog.getAttribute('data-id')
            window.location.href = `/blogview/${id}`
        })
    })
</script>