{{>nav}}
    <meta name="robots" content="sitemap">
    <main>
        <section>
            <h2>Blog Posts</h2>
            <table>
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Title</th>
                        <th>Link</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each blogData}}
                    <tr>
                        <td>{{@index}}</td>
                        <td><a href="/blogview/{{changeSpacesToDash this.title}}">{{this.title}}</a></td>
                        <td><a href="/blogview/{{changeSpacesToDash this.title}}">https://iluvnet.com/blogview/{{changeSpacesToDash this.title}}</a></td>

                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
    </main>
{{>footer}}

<style>
    body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

main {
    max-width: 800px;
    margin: 20px auto;
    padding: 20px;
}

section {
    margin-bottom: 40px;
}

ul {
    list-style-type: none;
    padding: 0;
}

li {
    margin-bottom: 10px;
}

a {
    color: #333;
    text-decoration: none;
}

a:hover {
    color: #666;
}
</style>