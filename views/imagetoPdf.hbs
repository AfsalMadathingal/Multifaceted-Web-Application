<script>

  const blog = document.querySelectorAll('.blog')

  blog.forEach((blog) => {
    blog.addEventListener('click', () => {
      const id = blog.getAttribute('data-id')
       let query = id.replace(/-/g, '@').replace(/\?/g, 'qmark').replace(/ /g, '-')
      window.location.href = `/blogview/${query}`
    })
  })


</script>